<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<tab id="general" sortOrder="10" translate="label">
			<label>general</label>
		</tab>
		<section id="cms" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
			<label>cms</label>
			<tab>general</tab>
			<resource>MAG_CmsLangMeta::config_mag_cmslangmeta</resource>
			<group id="mag" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
                <label>MAG</label>
				<field id="active" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="select">
                    <label>Enable module</label>
					<comment/>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="language_association" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="textarea">
					<label>Language association</label>
                    <comment>Enter store view ID and language code as id,code with each store view ID and code separated by new line (for example: 1,en-GB [press enter] 2,fr-FR)</comment>
				</field>
			</group>
		</section>
	</system>
</config>
